<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:background="#F6F7EB"
    tools:context=".CongressionalView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#E94F37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="218dp"
            android:layout_height="65dp"
            android:background="@drawable/rounded_red_border_blue_bg"
            android:fontFamily="@font/condiment"
            android:paddingTop="18dp"
            android:text="Your Senators"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="276dp"
        android:background="#E94F37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="218dp"
            android:layout_height="65dp"
            android:background="@drawable/rounded_red_border_blue_bg"
            android:fontFamily="@font/condiment"
            android:paddingTop="18dp"
            android:text="Your Representative"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="134dp"
        android:layout_height="203dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <ImageView
            android:id="@+id/s1Photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            app:srcCompat="@drawable/head_deep_blue" />

        <TextView
            android:id="@+id/s1Name"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="name"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/s1Party"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="party"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/s1State"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="state"
            android:textAlignment="center" />

        <Button
            android:id="@+id/s1Link"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="33dp"
            android:background="@drawable/rounded_blue_border_green_bg"
            android:fontFamily="@font/condiment"
            android:onClick="s1More"
            android:paddingTop="9dp"
            android:text="more..."
            android:textAlignment="center"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="134dp"
        android:layout_height="203dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <ImageView
            android:id="@+id/s2Photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            app:srcCompat="@drawable/head_deep_blue" />

        <TextView
            android:id="@+id/s2Name"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="name"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/s2Party"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="party"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/s2State"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="state"
            android:textAlignment="center" />

        <Button
            android:id="@+id/s2Link"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="33dp"
            android:background="@drawable/rounded_blue_border_green_bg"
            android:fontFamily="@font/condiment"
            android:onClick="s2More"
            android:paddingTop="9dp"
            android:text="more..."
            android:textAlignment="center"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="134dp"
        android:layout_height="203dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/rPhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            app:srcCompat="@drawable/head_deep_blue" />

        <TextView
            android:id="@+id/rName"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="name"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rParty"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="party"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rDistrict"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="@font/rationale"
            android:text="district"
            android:textAlignment="center" />

        <Button
            android:id="@+id/rLink"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="33dp"
            android:background="@drawable/rounded_blue_border_green_bg"
            android:fontFamily="@font/condiment"
            android:onClick="rMore"
            android:paddingTop="9dp"
            android:text="more..."
            android:textAlignment="center"
            android:textSize="10sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>